{
  "manifest_version": 2,

  "name": "Deezer Next",
  "description": "This extension hooks into Deezer to play a random track from one of your favourite artists.",
  "version": "1.0",
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },

  "icons": { 
      "16": "DeezerNext16.png",
      "48": "DeezerNext48.png",
      "128": "DeezerNext128.png" 
  },
  
  "permissions": [
	"declarativeContent",
	"tabs",
	"alarms",
	"http://*/*",
	"https://*/*"
  ],
  "page_action": {
    "default_icon": "DeezerNext19.png",
    "default_title": "Next!"
  }
}